@import "reset";


html {
    background: white;
    color: #000;
    text-align: center;
    font-family: 'Open Sans', sans-serif;
    font-size: 3vmin
}

article {
    width: 60%;
    height: 100%
    margin: auto;
}

h1 {
    text-indent: -9999px;

    width: 100%;

    height: 35vh;
    margin-top: 5vw;

    background: url(img/logo.png) no-repeat center;
    background-size: contain;
}

p {
    margin: 5vw 0vw;
    line-height: 1.3em;

}

.links a {
    color: #000;
    text-decoration: none
    font-size: 300%;
    margin: 0 0.1em;

    &:visited {
        color: #000;
    }
}
